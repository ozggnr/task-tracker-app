generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TASK_STATUS {
  IN_PROGRESS
  COMPLETED
}

model Task {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime    @default(now())
  date        DateTime    @db.Date
  title       String
  description String
  start       String
  end         String
  status      TASK_STATUS @default(IN_PROGRESS)
  subTasks    SubTask[]
}

//Embedded document pattern
model SubTask {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime    @default(now())
  belongsTo   Task        @relation(fields: [belongsToId], references: [id], onDelete: Cascade)
  belongsToId String      @db.ObjectId
  description String?
  start       String? 
  end         String?
  status      TASK_STATUS @default(IN_PROGRESS)
}
